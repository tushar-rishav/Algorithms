#include <stdio.h>

int sortNcount(char []);
void input(int);
int comp (const void * elem1, const void * elem2)
{
  char f = *((char*)elem1);
  char s = *((char*)elem2);
  if (f > s) return  1;
  if (f < s) return -1;
  return 0;
}

int main(){
  int t,*pay;
  char dummy;
  scanf("%d",&t);
  scanf("%c",&dummy);
  input(t);
  return 0;
}

void input(int t){
  int *pay,count,i=0;
  pay=(int*)malloc(t*sizeof(int)); // array for storing the pay

  while(t){
    char word[200];
    gets(word);
    pay[i]=sortNcount(word);

    i++;
    t--;
  }
  for(count=0;count<i;count++)
    printf("\n%d",pay[count]);

}
int sortNcount(char word[]){
  int i=0,pay=0,count=0,len=0;
  char ch;

  while(word[len]!='\0')
    len++;
  qsort (word, len,sizeof(char), comp); // words have been sorted
  ch=word[0];

  while(i<len){
    if(ch!=word[i]) // alphabet has changed;
      {
          ch=word[i]; // copy the new alphabet
          if(!(count%2)) //even
            pay+=(count/2);
          else        //odd
            pay+=((count+1)/2);
          if(!count)
            pay+=1;

          if(i==len-1) // when it approaches end
          {
            if(ch!=word[i-1])
              pay+=1;
          }
          count=1;
      }
      else
      {
        count++;
        if(i==len-1){
          if(!(count%2)) //even
            pay+=(count/2);
            else        //odd
            pay+=((count+1)/2);

          }
        }

      i++;
    }

  return pay;
}
